	   		android:layout_height="wrap_content"
	   		android:layout_weight="5"
	   		android:gravity="center"
	   		android:textSize="30sp"
	   		android:layout_margin="10dip" />
        
         <ImageButton
            android:id="@+id/image_abnf_set"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
